  <script>
    window.addEventListener("mousemove", (e) => {

      let conf = {
        rotateX: 5,
        rotateY: 7,
        translateX: 8,
        translateY: 10
      }

      let transformElements = [{
        id: "yellowBg",
        perspective: 1000
      }, {
        id: "outline",
        perspective: 500
      }, {
        id: "font",
        perspective: 325
      }];

      let x = e.clientX / window.innerWidth;
      let y = e.clientY / window.innerHeight;

      transformElements.forEach((el, index) => {
        let transformProp = `perspective(${el.perspective}px)`;
        transformProp += ` translate3d(0,0,${ index }px)`;

        transformProp += ` rotateX(${ ( ( ( y * conf.rotateX*2 ) - conf.rotateX ) * -1 ) }deg)`;
        transformProp += ` rotateY(${ ( ( ( x * conf.rotateY*2 ) - conf.rotateY ) * 1 ) }deg)`;

        transformProp += ` translateX(${ ( ( x * conf.translateX*2 ) - conf.translateX ) }px)`;
        transformProp += ` translateY(${ ( ( y * conf.translateY*2 ) - conf.translateY ) }px)`;
        document.getElementById(el.id).style.transform = transformProp;
      });

    });
  </script>